        <!-- 在订单行 tree 中将“产品总条数”放在单价(price_unit)之后 -->
        <record id="view_order_form_lines_tree_inherit_sum3_total" model="ir.ui.view">
            <field name="name">sale.order.form.lines.tree.inherit.sum3.total</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                    <field name="actual_production_qty" string="实际生产数量" optional="show"/>
                    <field name="sum3_total_count" string="总条数" optional="show"/>
                </xpath>
            </field>
