<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit product template kanban view to add secondary UOM fields -->
    <record id="product_template_kanban_view_inherit_bi_product_secondary_uom" model="ir.ui.view">
        <field name="name">product.template.kanban.inherit.bi_product_secondary_uom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field
            name="arch" type="xml">
            <!-- Hide the price span in kanban view -->
            <xpath expr="//kanban/templates/t/main/span[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Add background color based on is_safty field -->

            <xpath expr="//field[@name='product_properties']" position="after">
                <div>
                    面积:
                    <field name="product_area"/>㎡
                </div>
                <div>
                    体积:
                    <field name="product_volume"/>cm³
                </div>
                <field name="product_type" invisible="1"/>
                <div class="d-flex flex-row" style="justify-content: space-between;">
                    <div class="flex-1">
                        <span t-if="record.product_type and record.product_type.raw_value == 'solution_material'">配液原料</span>
                        <span t-elif="record.product_type and record.product_type.raw_value == 'raw_material'">原膜</span>
                        <span t-elif="record.product_type and record.product_type.raw_value == 'finished_product'">成品膜</span>
                        <span t-else="">默认产品</span>
                    </div>
                </div>
                <div>
                    采购单位:
                    <field name="purchase_unit_type"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
