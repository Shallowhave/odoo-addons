<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- 扩展交货单表单视图，添加品质报告打印按钮 -->
        <record id="view_picking_form_quality_report" model="ir.ui.view">
            <field name="name">stock.picking.form.quality.report</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- 将打印品质报告按钮放在打印交货单按钮之后 -->
                <!-- 直接放在 delivery_report 按钮之后，确保顺序正确 -->
                <xpath expr="//button[@name='action_print_delivery_report']" position="after">
                    <button name="action_print_quality_report" 
                            string="打印品质报告" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-print"
                            invisible="not can_print_quality_report"/>
                </xpath>
            </field>
        </record>

        <!-- 扩展交货单列表视图，添加品质报告打印按钮 -->
        <record id="view_picking_tree_quality_report" model="ir.ui.view">
            <field name="name">stock.picking.tree.quality.report</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <!-- 首先添加计算字段，使其在列表视图中可用 -->
                <!-- 将字段添加到第一个字段之后，使其在视图中可用 -->
                <xpath expr="//list//field[1]" position="after">
                    <field name="can_print_quality_report" invisible="1" column_invisible="1"/>
                </xpath>
                <!-- 然后在 header 中添加按钮 -->
                <!-- 注意：header 按钮的 invisible 无法访问记录级别的计算字段，所以在 Python 方法中检查权限 -->
                <xpath expr="//header" position="inside">
                    <button name="action_print_quality_report" 
                            string="品质报告" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-print"
                            groups="stock.group_stock_user"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
