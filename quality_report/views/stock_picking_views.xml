<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- 扩展交货单表单视图，添加品质报告打印按钮 -->
        <record id="view_picking_form_quality_report" model="ir.ui.view">
            <field name="name">stock.picking.form.quality.report</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_validate']" position="after">
                    <button name="action_print_quality_report" 
                            string="打印品质报告" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-print"
                            invisible="not can_print_quality_report"/>
                </xpath>
            </field>
        </record>

        <!-- 扩展交货单列表视图，添加品质报告打印按钮 -->
        <record id="view_picking_tree_quality_report" model="ir.ui.view">
            <field name="name">stock.picking.tree.quality.report</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_print_quality_report" 
                            string="品质报告" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-print"
                            groups="stock.group_stock_user"
                            invisible="not can_print_quality_report"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
