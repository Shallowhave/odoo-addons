<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 发货标签列表视图 -->
    <record id="view_delivery_label_list" model="ir.ui.view">
        <field name="name">delivery.label.list</field>
        <field name="model">delivery.label</field>
        <field name="arch" type="xml">
            <list string="发货标签" decoration-info="state == 'draft'" decoration-success="state == 'printed'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="template_id"/>
                <field name="state"/>
                <field name="print_date"/>
                <field name="print_user_id"/>
                <field name="tracking_number"/>
                <field name="weight"/>
            </list>
        </field>
    </record>

    <!-- 发货标签表单视图 -->
    <record id="view_delivery_label_form" model="ir.ui.view">
        <field name="name">delivery.label.form</field>
        <field name="model">delivery.label</field>
        <field name="arch" type="xml">
            <form string="发货标签">
                <header>
                    <button name="action_print_label" string="打印标签" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_mark_shipped" string="标记已发货" type="object" class="btn-secondary" invisible="state not in ['printed']"/>
                    <button name="action_mark_delivered" string="标记已送达" type="object" class="btn-success" invisible="state not in ['shipped']"/>
                    <button name="action_cancel" string="取消" type="object" class="btn-danger" invisible="state in ['cancelled', 'delivered']"/>
                    <button name="action_reset_to_draft" string="重置为草稿" type="object" class="btn-secondary" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,printed,shipped,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="picking_id"/>
                            <field name="partner_id"/>
                            <field name="template_id"/>
                            <field name="carrier_id"/>
                        </group>
                        <group>
                            <field name="tracking_number"/>
                            <field name="weight"/>
                            <field name="volume"/>
                            <field name="print_date"/>
                            <field name="print_user_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="delivery_address" widget="text" nolabel="1"/>
                        </group>
                        <group>
                            <field name="product_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="二维码" invisible="not qr_code">
                            <field name="qr_code" widget="image" nolabel="1"/>
                        </page>
                        <page string="标签预览" invisible="not label_image">
                            <field name="label_image" widget="image" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 发货标签搜索视图 -->
    <record id="view_delivery_label_search" model="ir.ui.view">
        <field name="name">delivery.label.search</field>
        <field name="model">delivery.label</field>
        <field name="arch" type="xml">
            <search string="搜索发货标签">
                <field name="name"/>
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="template_id"/>
                <field name="tracking_number"/>
                <field name="carrier_id"/>
                <separator/>
                <filter string="草稿" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="已打印" name="printed" domain="[('state', '=', 'printed')]"/>
                <filter string="已发货" name="shipped" domain="[('state', '=', 'shipped')]"/>
                <filter string="已送达" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="已取消" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="今天打印" name="today" domain="[('print_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('print_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <group expand="0" string="分组">
                    <filter string="状态" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="模板" name="group_template" context="{'group_by': 'template_id'}"/>
                    <filter string="客户" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="打印日期" name="group_print_date" context="{'group_by': 'print_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 发货标签动作 -->
    <record id="action_delivery_label" model="ir.actions.act_window">
        <field name="name">发货标签</field>
        <field name="res_model">delivery.label</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_delivery_label_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                创建您的第一个发货标签！
            </p>
            <p>
                发货标签帮助您管理和跟踪发货信息。
            </p>
        </field>
    </record>

    <!-- 发货标签看板视图 -->
    <record id="view_delivery_label_kanban" model="ir.ui.view">
        <field name="name">delivery.label.kanban</field>
        <field name="model">delivery.label</field>
        <field name="arch" type="xml">
            <kanban string="发货标签" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="partner_id"/>
                <field name="picking_id"/>
                <field name="weight"/>
                <field name="tracking_number"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="partner_id"/>
                                        <br/>
                                        <field name="picking_id"/>
                                        <br/>
                                        <span t-if="record.weight.value">重量: <field name="weight"/>kg</span>
                                        <br/>
                                        <span t-if="record.tracking_number.value">跟踪号: <field name="tracking_number"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-info" t-if="record.state.value == 'draft'">草稿</span>
                                        <span class="badge badge-success" t-if="record.state.value == 'printed'">已打印</span>
                                        <span class="badge badge-warning" t-if="record.state.value == 'shipped'">已发货</span>
                                        <span class="badge badge-primary" t-if="record.state.value == 'delivered'">已送达</span>
                                        <span class="badge badge-secondary" t-if="record.state.value == 'cancelled'">已取消</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
