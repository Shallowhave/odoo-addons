<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 序列号：发货标签编号 -->
    <record id="seq_delivery_label" model="ir.sequence">
        <field name="name">发货标签编号</field>
        <field name="code">delivery.label</field>
        <field name="prefix">DL</field>
        <field name="padding">6</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- 默认标签模板 -->
    <record id="template_standard" model="delivery.label.template">
        <field name="name">标准标签</field>
        <field name="description">标准发货标签模板，适用于大多数发货场景</field>
        <field name="width">100.0</field>
        <field name="height">60.0</field>
        <field name="orientation">portrait</field>
        <field name="show_company_logo">True</field>
        <field name="show_qr_code">True</field>
        <field name="show_barcode">True</field>
        <field name="show_tracking_number">True</field>
        <field name="show_weight">True</field>
        <field name="show_volume">False</field>
        <field name="show_delivery_address">True</field>
        <field name="show_product_list">True</field>
        <field name="font_size">medium</field>
        <field name="active">True</field>
    </record>

    <!-- 小标签模板 -->
    <record id="template_small" model="delivery.label.template">
        <field name="name">小标签</field>
        <field name="description">小型发货标签模板，适用于小包裹</field>
        <field name="width">80.0</field>
        <field name="height">50.0</field>
        <field name="orientation">portrait</field>
        <field name="show_company_logo">False</field>
        <field name="show_qr_code">True</field>
        <field name="show_barcode">False</field>
        <field name="show_tracking_number">True</field>
        <field name="show_weight">True</field>
        <field name="show_volume">False</field>
        <field name="show_delivery_address">True</field>
        <field name="show_product_list">False</field>
        <field name="font_size">small</field>
        <field name="active">True</field>
    </record>

    <!-- 批量标签模板 -->
    <record id="template_batch" model="delivery.label.template">
        <field name="name">批量标签</field>
        <field name="description">批量打印标签模板，一页多个标签</field>
        <field name="width">48.0</field>
        <field name="height">30.0</field>
        <field name="orientation">portrait</field>
        <field name="show_company_logo">False</field>
        <field name="show_qr_code">True</field>
        <field name="show_barcode">False</field>
        <field name="show_tracking_number">True</field>
        <field name="show_weight">True</field>
        <field name="show_volume">False</field>
        <field name="show_delivery_address">True</field>
        <field name="show_product_list">False</field>
        <field name="font_size">small</field>
        <field name="active">True</field>
    </record>

    <!-- 横向标签模板 -->
    <record id="template_landscape" model="delivery.label.template">
        <field name="name">横向标签</field>
        <field name="description">横向发货标签模板，适用于宽标签</field>
        <field name="width">120.0</field>
        <field name="height">80.0</field>
        <field name="orientation">landscape</field>
        <field name="show_company_logo">True</field>
        <field name="show_qr_code">True</field>
        <field name="show_barcode">True</field>
        <field name="show_tracking_number">True</field>
        <field name="show_weight">True</field>
        <field name="show_volume">True</field>
        <field name="show_delivery_address">True</field>
        <field name="show_product_list">True</field>
        <field name="font_size">large</field>
        <field name="active">True</field>
    </record>

</odoo>
