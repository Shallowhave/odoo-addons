<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 继承库存移动行操作视图 -->
        <record id="view_stock_move_line_operation_tree_inherit_inventory_unit_manager" model="ir.ui.view">
            <field name="name">stock.move.line.operations.list.inherit.inventory_unit_manager</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_name']" position="after">
                    <field name="lot_unit_name" 
                            string="单位"
                            column_invisible="parent.has_tracking == 'none' or not parent.show_lots_text"
                            widget="selection"/>
                    <field name="lot_quantity" 
                            string="单位数量"
                            column_invisible="parent.has_tracking == 'none' or not parent.show_lots_text"
                            sum="单位数量"/>
                    <field name="lot_unit_name_custom" 
                            column_invisible="1"
                            invisible="1"/>
                    <field name="custom_unit_values" 
                            column_invisible="1"
                            invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- 继承库存移动行表单视图 -->
        <record id="view_stock_move_line_form_inherit_inventory_unit_manager" model="ir.ui.view">
            <field name="name">stock.move.line.form.inherit.inventory_unit_manager</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="lot_quantity" string="单位数量"/>
                    <field name="lot_unit_name"/>
                    <field name="lot_unit_name_custom" invisible="lot_unit_name != 'custom'"/>
                    <field name="custom_unit_values" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
