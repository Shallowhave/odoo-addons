<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- 扩展交货单表单视图，添加打印按钮 -->
        <record id="view_picking_form_delivery_report" model="ir.ui.view">
            <field name="name">stock.picking.form.delivery.report</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_print_delivery_report" 
                            string="打印交货单" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-print"
                            invisible="not can_print_delivery_report"/>
                </xpath>
            </field>
        </record>

        <!-- 扩展交货单列表视图，添加打印按钮 -->
        <record id="view_picking_tree_delivery_report" model="ir.ui.view">
            <field name="name">stock.picking.tree.delivery.report</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <!-- 首先添加计算字段，使其在列表视图中可用 -->
                <!-- 将字段添加到第一个字段之后，使其在视图中可用 -->
                <xpath expr="//list//field[1]" position="after">
                    <field name="can_print_delivery_report" invisible="1" column_invisible="1"/>
                </xpath>
                <!-- 然后在 header 中添加按钮 -->
                <!-- 注意：header 按钮的 invisible 无法访问记录级别的计算字段，所以在 Python 方法中检查权限 -->
                <xpath expr="//header" position="inside">
                    <button name="action_print_delivery_report" 
                            string="交货单" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-print"
                            groups="stock.group_stock_user"/>
                </xpath>
            </field>
        </record>

        <!-- 交货单动作 -->
        <record id="action_delivery_report" model="ir.actions.report">
            <field name="name">交货单报告</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">delivery_report.delivery_report_template</field>
            <field name="report_file">delivery_report.delivery_report_template</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>
