<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 扩展作业类型视图，添加交货单打印配置选项 -->
        <record id="view_picking_type_form_delivery_report" model="ir.ui.view">
            <field name="name">stock.picking.type.form.delivery.report</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <!-- 在硬件标签页中添加交货单打印配置选项 -->
                <!-- 在 auto_print_packages 字段之后添加 -->
                <xpath expr="//page[@name='hardware']//field[@name='auto_print_packages']" position="after">
                    <field name="enable_delivery_report" 
                           string="启用交货单打印"
                           help="启用后，在交货单表单和列表视图中显示'打印交货单'按钮"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

