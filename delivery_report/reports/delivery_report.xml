<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- 交货单报告模板 -->
        <template id="delivery_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <!-- 报告标题 -->
                            <div class="oe_structure"/>
                            
                            <div class="row">
                                <div class="col-6">
                                    <h2>交货单</h2>
                                    <p><strong>交货单号：</strong><span t-field="o.name"/></p>
                                    <p><strong>状态：</strong><span t-field="o.state"/></p>
                                    <p><strong>交货日期：</strong><span t-field="o.scheduled_date" t-options="{'widget': 'datetime'}"/></p>
                                </div>
                                <div class="col-6">
                                    <h3>客户信息</h3>
                                    <p><strong>客户：</strong><span t-field="o.partner_id.name"/></p>
                                    <p><strong>地址：</strong><span t-field="o.partner_id.street"/></p>
                                    <p t-if="o.partner_id.street2"><span t-field="o.partner_id.street2"/></p>
                                    <p><span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.state_id.name"/></p>
                                    <p><span t-field="o.partner_id.country_id.name"/></p>
                                </div>
                            </div>

                            <hr/>

                            <!-- 产品明细表 -->
                            <h3>产品明细</h3>
                            <table class="table table-bordered" style="border-collapse: collapse; width: 100%;">
                                <thead>
                                    <tr>
                                        <th rowspan="2" style="border: 1px solid #000; padding: 8px; text-align: center; vertical-align: middle;">序号</th>
                                        <th rowspan="2" style="border: 1px solid #000; padding: 8px; text-align: center; vertical-align: middle;">产品名称</th>
                                        <th colspan="3" style="border: 1px solid #000; padding: 8px; text-align: center;">尺寸</th>
                                        <th rowspan="2" style="border: 1px solid #000; padding: 8px; text-align: center; vertical-align: middle;">批号</th>
                                        <th rowspan="2" style="border: 1px solid #000; padding: 8px; text-align: center; vertical-align: middle;">数量</th>
                                        <th rowspan="2" style="border: 1px solid #000; padding: 8px; text-align: center; vertical-align: middle;">单位</th>
                                        <th rowspan="2" style="border: 1px solid #000; padding: 8px; text-align: center; vertical-align: middle;">转换</th>
                                        <th rowspan="2" style="border: 1px solid #000; padding: 8px; text-align: center; vertical-align: middle;">订单号</th>
                                    </tr>
                                    <tr>
                                        <th style="border: 1px solid #000; padding: 8px; text-align: center;">厚度/μm</th>
                                        <th style="border: 1px solid #000; padding: 8px; text-align: center;">宽度/mm</th>
                                        <th style="border: 1px solid #000; padding: 8px; text-align: center;">米数/m</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="line_number" t-value="1"/>
                                    <t t-foreach="o._get_lot_serial_info()" t-as="lot">
                                        <tr>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;"><span t-esc="line_number"/></td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;"><span t-esc="lot['product']"/></td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                <span t-esc="lot['thickness']"/>
                                            </td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                <span t-esc="lot['width']"/>
                                            </td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                <span t-esc="lot['length']"/>
                                            </td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                <span t-esc="lot['lot_name']"/>
                                            </td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;"><span t-esc="lot['quantity']"/></td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;"><span t-esc="lot['uom']"/></td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">-</td>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;"><span t-field="o.origin"/></td>
                                        </tr>
                                        <t t-set="line_number" t-value="line_number + 1"/>
                                    </t>
                                </tbody>
                            </table>


                            <!-- 备注信息 -->
                            <div t-if="o.note">
                                <h3>备注</h3>
                                <p t-field="o.note"/>
                            </div>

                            <!-- 签名区域 -->
                            <div class="row mt-4">
                                <div class="col-6">
                                    <p>发货人签名：</p>
                                    <div style="height: 50px; border-bottom: 1px solid #000;"></div>
                                    <p>日期：</p>
                                </div>
                                <div class="col-6">
                                    <p>收货人签名：</p>
                                    <div style="height: 50px; border-bottom: 1px solid #000;"></div>
                                    <p>日期：</p>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
