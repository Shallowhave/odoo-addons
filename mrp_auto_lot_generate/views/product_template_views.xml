<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_mrp_lot_prefix" model="ir.ui.view">
        <field name="name">product.template.form.inherit.mrp.lot.prefix</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- 在基本信息标签页的追踪库存字段之后添加批次前缀字段 -->
            <xpath expr="//page[@name='general_information']//field[@name='tracking']" position="after">
                <label for="mrp_lot_prefix" string="批次号前缀" invisible="tracking == 'none'"/>
                <div invisible="tracking == 'none'">
                    <field name="mrp_lot_prefix" 
                           nolabel="1"
                           placeholder="留空使用全局配置"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
