<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_product_multi_unit_list" model="ir.actions.act_window">
        <field name="name">产品尺寸管理</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_length', '&gt;', 0), ('product_width', '&gt;', 0)]</field>
        <field name="context">{'search_default_has_dimensions': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                未找到有尺寸信息的产品！
            </p>
            <p>
                设置产品的长度、宽度、厚度和材料密度信息，便于计算体积和重量。
            </p>
        </field>
    </record>


</odoo>
