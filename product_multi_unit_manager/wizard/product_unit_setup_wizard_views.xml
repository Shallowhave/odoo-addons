<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 快速单位设置向导表单视图 -->
    <record id="product_unit_setup_wizard_form" model="ir.ui.view">
        <field name="name">product.unit.setup.wizard.form</field>
        <field name="model">product.unit.setup.wizard</field>
        <field name="arch" type="xml">
            <form string="快速单位设置">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_name" readonly="1" class="o_text_overflow"/>
                        </h1>
                        <h3>快速单位设置</h3>
                    </div>
                    
                    <!-- 产品类型显示 -->
                    <group>
                        <field name="product_tmpl_id" invisible="1"/>
                        <field name="product_type" readonly="1"/>
                    </group>
                    
                    <!-- 原料产品规格信息 -->
                    <group string="产品规格信息" invisible="product_type == 'finished_product'">
                        <group>
                            <field name="product_length" readonly="1"/>
                            <field name="product_width" readonly="1"/>
                            <field name="product_area" readonly="1"/>
                        </group>
                            <group>
                                <field name="product_thickness" readonly="1"/>
                            </group>
                    </group>
                    
                    <!-- 成品产品规格信息 -->
                    <group string="产品规格信息" invisible="product_type == 'raw_material'">
                        <group>
                            <field name="product_width" readonly="1"/>
                            <field name="product_thickness" readonly="1"/>
                            <field name="finished_density" readonly="1"/>
                        </group>
                        <group>
                            <field name="product_area" readonly="1" string="每米面积 (㎡/m)"/>
                            <field name="weight_per_meter" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- 原料自动计算结果 -->
                    <group string="自动计算结果 (以卷为基础)" invisible="product_type == 'finished_product'">
                        <group>
                            <field name="meter_per_roll" readonly="1" 
                                   invisible="meter_per_roll == 0"/>
                            <field name="sqm_per_roll" readonly="1"
                                   invisible="sqm_per_roll == 0"/>
                        </group>
                        <group>
                            <field name="ton_per_roll" readonly="1"
                                   invisible="ton_per_roll == 0"/>
                        </group>
                    </group>
                    
                    <!-- 成品自动计算结果 -->
                    <group string="自动计算结果 (以米为基础)" invisible="product_type == 'raw_material'">
                        <field name="sqm_per_meter" readonly="1"/>
                    </group>
                    
                    <!-- 原料采购单位选择 -->
                    <group string="单位设置" invisible="product_type == 'finished_product'">
                        <field name="purchase_unit" widget="radio"/>
                    </group>
                    
                    <!-- 成品单位说明 -->
                    <group string="单位设置" invisible="product_type == 'raw_material'">
                        <div class="alert alert-info">
                            <strong>成品单位系统：</strong><br/>
                            • 基础单位：米<br/>
                            • 次要单位：平米<br/>
                            • 采购单位：平米（默认）
                        </div>
                    </group>
                    <footer>
                        <button name="action_setup_units" 
                                type="object" 
                                string="设置单位" 
                                class="btn-primary"/>
                        <button name="action_cancel" 
                                string="取消" 
                                type="object" 
                                class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 向导动作 -->
    <record id="action_product_unit_setup_wizard" model="ir.actions.act_window">
        <field name="name">快速单位设置</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.unit.setup.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
    </record>

    <!-- 批量单位设置向导视图 -->
    <record id="product_batch_unit_setup_wizard_form_view" model="ir.ui.view">
        <field name="name">product.batch.unit.setup.wizard.form</field>
        <field name="model">product.batch.unit.setup.wizard</field>
        <field name="arch" type="xml">
            <form string="批量单位设置">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="total_products" readonly="1" invisible="1"/>
                            批量单位设置
                        </h1>
                    </div>
                    
                    <group>
                        <group string="统计信息">
                            <field name="total_products" readonly="1"/>
                            <field name="eligible_products" readonly="1"/>
                            <field name="skipped_products" readonly="1"/>
                        </group>
                        <group string="设置选项">
                            <field name="purchase_unit" widget="radio"/>
                        </group>
                    </group>
                    
                    <group string="产品列表" invisible="total_products == 0">
                        <field name="product_tmpl_ids" readonly="1" nolabel="1" widget="many2many_tags"/>
                    </group>
                    
                    <group string="产品详情" invisible="total_products == 0">
                        <field name="product_details" readonly="1" nolabel="1" widget="text"/>
                    </group>
                    
                    <div class="alert alert-info" invisible="eligible_products > 0">
                        <strong>提示：</strong>没有符合条件的产品可以设置单位。请检查产品是否缺少基础信息或已经设置过单位。
                    </div>
                    
                    <div class="alert alert-warning" invisible="skipped_products == 0">
                        <strong>注意：</strong>将跳过已设置单位或基础信息不完整的产品。
                    </div>
                </sheet>
                
                <footer>
                    <button name="action_setup_units" 
                            string="开始批量设置" 
                            type="object" 
                            class="btn-primary"
                            invisible="eligible_products == 0"/>
                    <button name="action_cancel" 
                            string="取消" 
                            type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- 批量单位设置向导动作 -->
    <record id="action_product_batch_unit_setup_wizard" model="ir.actions.act_window">
        <field name="name">批量单位设置</field>
        <field name="res_model">product.batch.unit.setup.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="product_batch_unit_setup_wizard_form_view"/>
    </record>
</odoo>